<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PracticalNine</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand  text-white" href="@Url.Action("Test1")">Practical-09</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" aria-current="page" href=@Url.Action("Test1")>Test-1</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  text-white" href=@Url.Action("Test2")>Test-2</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href=@Url.Action("Test3")>Test-3</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main class="m-5">
        <h1 class="text-center text-decoration-underline">@ViewData["TaskInfo"]</h1>
        <div class="text-center my-5">
            @RenderBody()
        </div>
    </main>

    @RenderSection("Scripts", false);
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" type="text/javascript"></script>
</body>
</html>
